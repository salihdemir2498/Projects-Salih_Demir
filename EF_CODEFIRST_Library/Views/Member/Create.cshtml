@model Member
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">Yeni Kitap Ekle</h1>
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Member Name:</label>
                <input type="text" asp-for="MemberName" class="form-control">
                <label class="control-label">Member Surname:</label>
                <input type="text" asp-for="MemberSurname" class="form-control">
                <label class="control-label">Member Date Of Birth:</label>
                <input type="date" asp-for="MemberDateOfBirth" class="form-control">
                <label class="control-label">Member Phone Number:</label>
                <input type="text" asp-for="MemberPhoneNumber" class="form-control">
                <label class="control-label">Member Mail:</label>
                <input type="email" asp-for="MemberMail" class="form-control">
                <label class="control-label">Member Join Date:</label>
                <input type="date" asp-for="MemberJoinDate" class="form-control">
                <label class="control-label">Member Job:</label>
                <input type="text" asp-for="MemberJob" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>
