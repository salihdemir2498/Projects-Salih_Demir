@model Member
@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-3">Üye Düzenle</h1>
<div class="row">
    <div class="col-md-8">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="MemberId">
                <div class="row">
                    <div class="col-md-6">
                        
                        <label class="control-label">Member Name</label>
                        <input class="form-control" type="text" asp-for="MemberName"><br>
                        <label class="control-label">Member Surname</label>
                        <input class="form-control" type="text" asp-for="MemberSurname">
                        <label class="control-label">Member Date Of Birth</label>
                        <input class="form-control" type="date" asp-for="MemberDateOfBirth">
                        <label class="control-label">Member Phone Number</label>
                        <input class="form-control" type="text" asp-for="MemberPhoneNumber">
                        <label class="control-label">Member Mail</label>
                        <input class="form-control" type="email" asp-for="MemberMail">
                    </div>
                    <div class="col-md-6">
                        
                        <label class="control-label">Member Join Date</label>
                        <input class="form-control" type="date" asp-for="MemberJoinDate">
                        <label class="control-label">Member Job</label>
                        <input class="form-control" type="text" asp-for="MemberJob">
                        <label class="control-label">IsDeleted</label>
                        <input class="form-control" type="text" asp-for="IsDeleted">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">

            </div>
        </form>
    </div>
</div>