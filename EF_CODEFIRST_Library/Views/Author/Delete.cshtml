@model EF_CODEFIRST.Models.Author
@{
    ViewData["Title"] = "Delete";
}

<h3>Yazar Sil:</h3>
<table class="table table-dark">
    <thead>
        <tr>
            <th>Yazar Adı:</th>
            <th>Yazar Soyadı:</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.AuthorName</td>
                <td>@Model.AuthorSurname</td>
            </tr>
    </tbody>

</table>

<form asp-action="Delete">
<input type="hidden" asp-for="IsDeleted">
<input type="submit" value="Kitab Türünü Sil" class="btn btn-danger">
</form>

<div>
    <a asp-action="">Kitap Türü Listesine Geri Dön</a>
</div>