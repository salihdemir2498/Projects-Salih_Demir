@model EF_CODEFIRST.Models.Author
@{
    ViewData["Title"] = "Create";
}


<h1 class="display-3">Yeni Yazar Ekle</h1>
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Yazar Adı:</label>
                <input type="text" asp-for="AuthorName" class="form-control">
                <label class="control-label">Yazar Soyadı:</label>
                <input type="text" asp-for="AuthorSurname" class="form-control">
                <label class="control-label">Yazarın Doğum Tarihi:</label>
                <input type="text" asp-for="AuthorDateOfBirth" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>