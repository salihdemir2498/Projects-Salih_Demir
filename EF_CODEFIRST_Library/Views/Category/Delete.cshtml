@model Category
@{
    ViewData["Title"] = "Delete";
}

<h3>Kategori Sil</h3>

<table class="table table-dark">
    <thead>
        <tr>
            <th>Kategori Adı:</th>
            <th>Kategori Açıklaması:</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.CategoryName</td>
                <td>@Model.CategoryDescription</td>
            </tr>
    </tbody>

</table>

<form asp-action="Delete">
<input type="hidden" asp-for="IsDeleted">
<input type="submit" value="Kitab Türünü Sil" class="btn btn-danger">
</form>

<div>
    <a asp-action="">Kitap Türü Listesine Geri Dön</a>
</div>