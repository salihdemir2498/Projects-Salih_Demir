@model EF_CODEFIRST.Models.Category
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">Yeni Kategori Ekle</h1>
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Kategori Adı:</label>
                <input type="text" asp-for="CategoryName" class="form-control">
                <label class="control-label">Kategori Açıklaması:</label>
                <input type="text" asp-for="CategoryDescription" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="">Kitap Türü Listesine Geri Dön</a>
</div>