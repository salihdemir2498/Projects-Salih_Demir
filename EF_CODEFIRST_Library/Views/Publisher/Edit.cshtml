@model Publisher
@{
    ViewData["Title"] = "Edit";
}

<h1 class="display-3">Yayımcı Düzenle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div class="form-group">
                <input type="hidden" asp-for="PublisherId">
                <label class="control-label">Yayımcı Adı</label>
                <input class="form-control" type="text" asp-for="PublisherName"><br>
                <label class="control-label">Yayımcı Şehir</label>
                <input class="form-control" type="text" asp-for="PublisherCity">
                <label class="control-label">Yayımcı Mail</label>
                <input class="form-control" type="text" asp-for="PublisherMail">
            </div>
            <div class="form-group">
                <input type="submit" value="Değişiklikleri Kaydet" class="btn btn-primary">

            </div>
        </form>
    </div>
</div>