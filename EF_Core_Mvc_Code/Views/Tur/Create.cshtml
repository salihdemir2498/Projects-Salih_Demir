@model Turler  //viewimport da using yapılmış
@{
    ViewData["Title"] = "Create";
}

<h1 class="display-3">Yeni Kitap Türü</h1>
<div class="row">
    <div class="col-md-4 ">
        <form asp-action="Create">
            <div class="form-group">
                <label class="control-label">Kitap Türü</label>
                <input type="text" asp-for="TurAd" class="form-control">
            </div>
            <div class="form-group">
                <input type="submit" value="Kaydet" class="btn btn-success">
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="">Kitap Türü Listesine Geri Dön</a>
</div>