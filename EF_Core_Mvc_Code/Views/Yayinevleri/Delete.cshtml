@model EF_Core_Mvc_Code.Models.Yayinevleri;
@{
    ViewData["Title"] = "Delete";
}

<h1 class="display-3">Yayınevi Sil</h1>

<div>
    <h4>Yayınevi</h4>
    <h5>Yayınevi ID: </h5>
    <p>@Model.Id</p>
    <h5>Yayınevi Ad:</h5>
    <p>@Model.Ad</p>
    <h5>Yayınevi Adres:</h5>
    <p>@Model.Adres</p>
    <h5>Yayınevi Tel:</h5>
    <p>@Model.Tel</p>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="Id">
    <input type="submit" value="Kitab Türünü Sil" class="btn btn-danger">

</form>
<a asp-action="Index">Yayınevi Listesine dön.</a>