@model List<DersBlogSite.Models.Article>

<div class="container-fluid">
    <div class="row">
        @{
            foreach (var item in Model)
            {


                <div class="col-sm-6">
                    <div class="card mt-4">
                        <div class="card-body">
                            <h5 class="card-title">@item.Header</h5>
                            <p class="card-text">@item.Content</p>
                            <a href="homeArticle" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </div>


            }
        }
    </div>
</div>


